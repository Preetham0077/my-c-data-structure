#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
    int data;
    struct Node *next;
} Node;
Node* createNode(int value) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    if (!newNode) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
    newNode->data = value;
    newNode->next = NULL;
    return newNode;
}
void append(Node **head, int value) {
    Node *newNode = createNode(value);
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    Node *temp = *head;
    while (temp->next != NULL)
        temp = temp->next;
    temp->next = newNode;
}
void printList(Node *head) {
    Node *temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}
void deleteKthFromEnd(Node **head, int k)
Node *fast = *head, *slow = *head, *prev = NULL;


    for (int i = 0; i < k; i++) {
        if (fast == NULL) {
            printf("List has fewer than %d nodes.\n", k);
            return;
        }
        fast = fast->next;
    }

    if (fast == NULL) {
        Node *toDelete = *head;
        *head = (*head)->next;
        free(toDelete);
        return;
    }

    while (fast != NULL) {
        fast = fast->next;
        prev = slow;
        slow = slow->next;
    }

    
    prev->next = slow->next;
    free(slow);
}


void freeList(Node *head) {
    Node *temp;
    while (head != NULL) {
        temp = head;
        head = head->next;
        free(temp);
    }
}

int main() {
    Node *head = NULL;
    int n, val, k;

    printf("Enter number of nodes: ");
    scanf("%d", &n);

    printf("Enter %d node values:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &val);
        append(&head, val);
    }

    printf("Linked List: ");
    printList(head);

    printf("Enter k (node to delete from end): ");
    scanf("%d", &k);

    deleteKthFromEnd(&head, k);

    printf("After deletion: ");
    printList(head);

    freeList(head);
    return 0;
}

