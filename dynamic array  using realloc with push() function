#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int *data;      
    int size;       
    int capacity;   
} DynamicArray;
void initArray(DynamicArray *arr, int initialCapacity) {
    arr->data = (int *)malloc(initialCapacity * sizeof(int));
    if (arr->data == NULL) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
    arr->size = 0;
    arr->capacity = initialCapacity;
}


void push(DynamicArray *arr, int value) {
    if (arr->size == arr->capacity) {
        arr->capacity *= 2;
        int *temp = (int *)realloc(arr->data, arr->capacity * sizeof(int));
        if (temp == NULL) {
            printf("Memory reallocation failed!\n");
            free(arr->data);
            exit(1);
        }
        arr->data = temp;
        printf("Capacity doubled to %d\n", arr->capacity);
    }
    arr->data[arr->size] = value;
    arr->size++;
}
void printArray(DynamicArray *arr) {
    printf("Array elements (%d/%d): ", arr->size, arr->capacity);
    for (int i = 0; i < arr->size; i++) {
        printf("%d ", arr->data[i]);
    }
    printf("\n");
}
void freeArray(DynamicArray *arr) {
    free(arr->data);
    arr->data = NULL;
    arr->size = 0;
    arr->capacity = 0;
}

int main() {
    DynamicArray arr;
    initArray(&arr, 2); 
    for (int i = 1; i <= 10; i++) {
        push(&arr, i);
        printArray(&arr);
    }

    freeArray(&arr);
    return 0;
}
