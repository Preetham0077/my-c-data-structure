#include <stdio.h>
#include <stdlib.h>

int main() {
    int *arr;
    int N;
    int sum = 0, max;

    printf("Enter number of elements: ");
    scanf("%d", &N);
    arr = (int *)malloc(N * sizeof(int));
    if (arr == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    printf("Enter %d integers:\n", N);
    for (int i = 0; i < N; i++) {
        scanf("%d", (arr + i));  
    }
    max = *arr;
    for (int i = 0; i < N; i++) {
        sum += *(arr + i);
        if (*(arr + i) > max)
            max = *(arr + i);
    }

    printf("\nSum = %d", sum);
    printf("\nMaximum = %d\n", max);
    free(arr);

    return 0;
}
