#include <stdio.h>
#include <stdlib.h>

int main() {
    int R, C;
    int *mat = NULL;
    int *transpose = NULL;

    printf("Enter rows and columns: ");
    scanf("%d %d", &R, &C);
    mat = (int *)malloc(R * C * sizeof(int));
    if (mat == NULL) {
        printf("Memory allocation failed!\n");
        return 1;
    }
    printf("Enter %d elements:\n", R * C);
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++) {
            scanf("%d", (mat + i * C + j));
        }
    }

    printf("\nOriginal Matrix:\n");
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++) {
            printf("%d ", *(mat + i * C + j));
        }
        printf("\n");
    }
    if (R != C) {
        transpose = (int *)malloc(C * R * sizeof(int));
        if (transpose == NULL) {
            printf("Memory allocation failed for transpose!\n");
            free(mat);
            return 1;
        }
        for (int i = 0; i < R; i++) {
            for (int j = 0; j < C; j++) {
                *(transpose + j * R + i) = *(mat + i * C + j);
            }
        }

        printf("\nTranspose Matrix:\n");
        for (int i = 0; i < C; i++) {
            for (int j = 0; j < R; j++) {
                printf("%d ", *(transpose + i * R + j));
            }
            printf("\n");
        }

        free(transpose);
    }
    else {
      
        printf("\nTranspose Matrix:\n");
        for (int i = 0; i < C; i++) {
            for (int j = 0; j < R; j++) {
                printf("%d ", *(mat + j * C + i));
            }
            printf("\n");
        }
    }

    free(mat);
    return 0;
}
